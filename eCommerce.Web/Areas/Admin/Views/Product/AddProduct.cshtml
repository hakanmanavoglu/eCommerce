@model eCommerce.Web.Areas.Admin.Models.ProductModels.ProductViewModel

@{
    ViewBag.Title = "Add Product";
}

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    if (TempData["MessagesForView"] != null)
    {
        <div>
            @TempData["MessagesForView"]
        </div>
    }

    <div class="form-horizontal">
        <h4>Ürün Ekleme</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProfileImgUrlOriginal, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ProfileImgUrlOriginal, new { @type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProfileImgUrlOriginal)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SerialNo, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SerialNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SerialNo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShortDescription, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ShortDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShortDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HtmlDescription, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.HtmlDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HtmlDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OldPrice, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OldPrice, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OldPrice)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiscountRate, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DiscountRate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DiscountRate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Discount, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Discount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewPrice, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NewPrice, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewPrice)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "--- Kategori Seçiniz ---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}