@model eCommerce.Web.Areas.Admin.Models.CategoryModels.CategoryViewModel

@{
    ViewBag.Title = "Add Category";
}

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    if (TempData["MessagesForView"] != null)
    {
        <div>
            @TempData["MessagesForView"]
        </div>
    }

    <div class="form-horizontal">
        <h4>Kategori Ekleme</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProfileImgUrl, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ProfileImgUrl, new { @type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProfileImgUrl)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ParentId, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ParentId, new SelectList(Model.Categories, "Id", "Name", "--- Kategori Seçiniz ---"))
                @Html.ValidationMessageFor(model => model.ParentId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



